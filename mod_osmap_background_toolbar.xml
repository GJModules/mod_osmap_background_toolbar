	<description>MOD_OSMAP_BACKGROUND_TOOLBAR_XML_DESCRIPTION</description>

	<files>
		<filename module="mod_osmap_background_toolbar">mod_osmap_background_toolbar.php</filename>
		<folder>assets</folder>
