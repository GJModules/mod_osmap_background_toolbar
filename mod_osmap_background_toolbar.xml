					description="MOD_OSMAP_BACKGROUND_TOOLBAR_LIMIT_LINKS_IN_FILES_DESC"
					showon=""
					hint=""
					filter="raw" />
					
					
			</fieldset>
			<fieldset
					name="advanced">
				<field
						name="moduleclass_sfx"
						type="text"
						label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
						description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
		</fields>
